
@{
    ViewBag.Title = "UserComment";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="mdui-row">
    <div class="mdui-text-right mdui-m-b-2">
        <button id="commentAdd" class="mdui-btn mdui-btn-icon mdui-m-r-1" style="padding: 25px;" mdui-tooltip="{content: '添加'}"><i class="mdui-icon material-icons">add</i></button>
        <button id="commentEdit" class="mdui-btn mdui-btn-icon" style="padding: 25px;" mdui-tooltip="{content: '编辑'}"><i class="mdui-icon material-icons">update</i></button>
        <button id="commentDelete" class="mdui-btn mdui-btn-icon" style="padding: 25px;" mdui-tooltip="{content: '删除'}"><i class="mdui-icon material-icons">delete</i></button>
    </div>

    <div class="mdui-table-fluid mdui-hoverable mdui-table-hoverable">
        <table class="mdui-table mdui-table-selectable ">
            <thead>
                <tr>
                    <th>评论编号</th>
                    <th>评论用户</th>
                    <th>评论商品</th>
                    <th>评论类容</th>
                    <th>评论时间</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


