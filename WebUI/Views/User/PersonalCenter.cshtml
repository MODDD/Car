    <style>
        #middle {
            background: #f5f5f5;
        }

        .box {
            background: #fff;
            padding: 34px 34px 0;
            border: 1px solid #e6e6e6;
            border-radius: 10px;
            min-height: 400px;
        }

        .main_left {
            float: left;
            width: 250px;
        }

        .main_right {
            float: right;
            width: 550px;
        }

        .framedatabox {
            padding-top: 15px;
        }

            .framedatabox h3 {
                font-size: 16px;
                color: #333;
                margin-top: 0px;
                float: left;
                margin-bottom: 0px;
                position: relative;
                top: 10px;
            }

            .framedatabox .fdata {
                padding-left: 20px;
                line-height: 40px;
                border-bottom: 2px solid #e6e6e6;
                overflow: hidden;
            }

            .framedatabox a {
